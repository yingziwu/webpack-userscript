{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "https://www.tampermonkey.net/documentation.php",
    "definitions": {
        "Connect": {
            "anyOf": [
                {
                    "type": "string",
                    "format": "hostname"
                },
                {
                    "type": "string",
                    "format": "ipv4"
                },
                {
                    "type": "string",
                    "format": "ipv6"
                },
                {
                    "enum": [ "self", "*", "localhost" ]
                }
            ]
        }
    },
    "additionalProperties": true,
    "properties": {
        "name": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "collaborator": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "copyright": {
            "type": "string"
        },
        "license": {
            "anyOf": [
                { "type": "string" },
                {
                    "type": "array",
                    "items": { "type": "string" }
                }
            ]
        },
        "homepage": {
            "type": "string",
            "format": "uri"
        },
        "homepageURL": {
            "type": "string",
            "format": "uri"
        },
        "website": {
            "type": "string",
            "format": "uri"
        },
        "source": {
            "type": "string",
            "format": "uri"
        },
        "icon": {
            "type": "string",
            "format": "uri"
        },
        "iconURL": {
            "type": "string",
            "format": "uri"
        },
        "defaulticon": {
            "type": "string",
            "format": "uri"
        },
        "icon64": {
            "type": "string",
            "format": "uri"
        },
        "icon64URL": {
            "type": "string",
            "format": "uri"
        },
        "updateURL": {
            "type": "string",
            "format": "uri"
        },
        "downloadURL": {
            "anyOf": [
                { "enum": ["none"] },
                {
                    "type": "string",
                    "format": "uri"
                }
            ]
        },
        "installURL": {
            "type": "string",
            "format": "uri"
        },
        "supportURL": {
            "type": "string",
            "format": "uri"
        },
        "include": {
            "anyOf": [
                { "type": "string" },
                {
                    "type": "array",
                    "items": { "type": "string" }
                }
            ]
        },
        "exclude": {
            "anyOf": [
                { "type": "string" },
                {
                    "type": "array",
                    "items": { "type": "string" }
                }
            ]
        },
        "match": {
            "anyOf": [
                { "type": "string" },
                {
                    "type": "array",
                    "items": { "type": "string" }
                }
            ]
        },
        "require": {
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri-reference"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "uri-reference"
                    }
                }
            ]
        },
        "resource": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "type": "string",
                    "format": "uri-reference"
                }
            }
        },
        "connect": {
            "anyOf": [
                { "$ref": "#/definitions/Connect" },
                {
                    "type": "array",
                    "items": { "$ref": "#/definitions/Connect" }
                }
            ]
        },
        "run-at": {
            "type": "string" 
        },
        "grant": {
            "anyOf": [
                { "enum": [ "none", "unsafeWindow" ] },
                {
                    "type": "string",
                    "pattern": "^GM_"
                },
                {
                    "type": "string",
                    "pattern": "^window\\."
                }
            ]
        },
        "webRequest": {
            "type": "string"
        },
        "noframes": {
            "type": "boolean" 
        },
        "unwrap": {
            "type": "boolean" 
        },
        "nocompat": {
            "anyOf": [
                {
                    "type": "boolean" 
                },
                {
                    "type": "string" 
                }
            ]
        }
    }
}