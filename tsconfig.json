{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types/",
      "types/"
    ]
  },
  "include": [
    "lib",
    "types"
  ],
  "exclude": [
    "node_modules",
    "*.spec.ts",
    "*.test.ts"
  ]
}